---
const { image, title, isVertical } = Astro.props;
---

<div class="card bg-base-200">
    <div class="card-body gap-2">
        <img src={image} alt={title} class="c w-full max-h-40 object-contain" />
        <p class="text-xl font-bold">{title}</p>
        <slot />
    </div>
</div>

<dialog id={`modal-${title}`} class="modal">
    <div
        class={isVertical
            ? "modal-box h-10/12 min-w-0"
            : "modal-box max-w-none w-11/12"}
    >
        <img
            src={image}
            alt={title}
            class={isVertical ? "h-full mx-auto" : "w-full"}
        />
    </div>
    <form method="dialog" class="modal-backdrop">
        <button>close</button>
    </form>
</dialog>
